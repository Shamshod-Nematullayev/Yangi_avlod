}
.card p{
    width: 80%;
    font-size: 600;
    text-align: center;
}
.card button{
    width: 80%;
    height: 50px;    
    background-color: #1c4eac;
    border: none;
    transition: all .4s ease;
}
.card button a{
    color: white;
    font-size: 22px;
    letter-spacing: 1px;
    text-decoration: none;
}
.card button:active{
    transform: scale(0.99);
}
.card button:hover{
    cursor: pointer;
    background-color: #0b2d6b;
}
    </style>
